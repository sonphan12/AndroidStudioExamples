<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnColdObservable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cold_observable"/>
    <Button
        android:id="@+id/btnAsyncSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/async_subject"/>
    <Button
        android:id="@+id/btnBehaviourSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/behaviour_subject"/>

    <Button
        android:id="@+id/btnPublishSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/publish_subject"/>

    <Button
        android:id="@+id/btnReplaySubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/replay_subject"/>

</LinearLayout>